---
import "../styles/global.css"
import { Picture } from 'astro:assets';
import myheroimage from '../assets/image.webp'
// Mengambil path URL saat ini (misal: /artwork/illustration)
const pathname = Astro.url.pathname;

// Logika penentuan judul otomatis
let displayTitle = "Artwork"; // Default

if (pathname.includes('1')) {
  displayTitle = "Illustration";
} else if (pathname.includes('2')) {
  displayTitle = "2d-Assets";
} else if (pathname.includes('3')) {
  displayTitle = "3D-Assets";
  } else if (pathname.includes('4')) {
  displayTitle = "Work in Progres";
}
---
<!DOCTYPE html>
<html>
    <head>
        <title>Resillust/illust</title>
        <!-- -font- -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Italiana&family=Jacquarda+Bastarda+9&family=Linden+Hill:ital@0;1&family=Piazzolla:opsz,wght@8..30,100..900&display=swap" rel="stylesheet">
    </head>
    <body> 
    <div>
        <body>
<aside class="fixed w-screen h-[8vw] bg-[#1A1B19] shadow-[-3px_5px_5px_rgba(0,0,0,0.90)] flex items-center justify-center px-5 z-[100]">
  
  <div class="flex items-center gap-4">
    <div class="flex flex-col items-center">
      <h1 class="text-white text-[4vw] leading-none font-arial uppercase tracking-tighter font-italiana">
        {displayTitle}
      </h1>
      <div class="w-full h-[0.1vh] bg-white mt-1"></div>
      <p class="text-white text-[1.2vw] font-linden uppercase tracking-[0.3em] mt-1">
        Resillust
      </p>
    </div>


    <div class="flex flex-col items-center justify-center">
      <svg width="30" height="30" viewBox="0 0 24 24" fill="white">
        <slot name="icon-svg" />
      </svg>
      <span class="text-white text-[0.7vw] font-arial uppercase mt-1 opacity-60">icon/svg</span>
    </div>
  </div>

  <button id="menu-trigger" class="absolute right-10 flex flex-col gap-1.5 cursor-pointer z-[110]">
      <div class="w-8 h-[2px] bg-white transition-all duration-300"></div>
      <div class="w-8 h-[2px] bg-white transition-all duration-300"></div>
      <div class="w-8 h-[2px] bg-white transition-all duration-300"></div>
  </button>

  <div id="dropdown-menu" class="hidden absolute right-0 top-[8vw] w-[200px] bg-[#1A1B19] border-l border-b border-white/10 flex flex-col">
    <a href="/artwork" class="group flex items-center justify-between px-6 py-4 bg-[#1A1B19] hover:bg-[#FFB13B] active:bg-white transition-all duration-200">
        <span class="font-piazzolla text-white text-sm tracking-widest group-hover:text-white group-active:text-black uppercase">back to</span>
        <div class="w-5 h-5 flex items-center justify-center group-active:invert">
            <svg viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" class="group-active:stroke-black">
                <path d="M19 12H5M5 12L12 19M5 12L12 5" />
            </svg>
        </div>
    </a>

    <a href="#" class="group flex items-center justify-between px-6 py-4 bg-[#1A1B19] hover:bg-[#FFB13B] active:bg-white transition-all duration-200 border-t border-white/5">
        <span class="font-piazzolla text-white text-sm tracking-widest group-hover:text-white group-active:text-black uppercase">show all</span>
        <div class="w-5 h-5 flex items-center justify-center">
            <svg viewBox="0 0 24 24" fill="white" class="group-active:fill-black">
                <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
            </svg>
        </div>
    </a>
  </div>
</aside>
<main>
  <slot />
</main>

<script>
  const trigger = document.getElementById('menu-trigger');
  const menu = document.getElementById('dropdown-menu');

  trigger?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
  });

  // Klik di luar untuk menutup
  window.addEventListener('click', (e) => {
      if (!trigger?.contains(e.target as Node) && !menu?.contains(e.target as Node)) {
          menu?.classList.add('hidden');
      }
  });
</script>