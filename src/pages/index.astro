---
import Nav from "../layouts/nav.astro";
import { Picture } from 'astro:assets';
import myheroimage from '../assets/image.webp';
---

<Nav>
  <div class="relative w-full h-full overflow-hidden bg-black">
    
    <div class="absolute inset-0 z-20 bg-white animate-reveal-white pointer-events-none"></div>

    <div class="absolute inset-0 z-0">
      <Picture 
        src={myheroimage} 
        formats={['avif', 'webp']}
        alt="Hero Artwork" 
        class="w-full h-full object-cover object-center scale-[1.02] animate-image-entry" 
        loading="eager"
        fetchpriority="high"
      />
    </div>

  </div>
</Nav>

<style is:global>
  /* Menghilangkan semua kemungkinan padding/margin yang tersisa */
  html, body, main {
    margin: 0 !important;
    padding: 0 !important;
    width: 100% !important;
    height: 100% !important;
    overflow: hidden !important;
  }

  /* Animasi Transisi White to Image */
  @keyframes reveal-white {
    0% { transform: translateY(0); }
    100% { transform: translateY(-100%); }
  }

  @keyframes image-entry {
    0% { opacity: 0; transform: scale(1.1); filter: brightness(1.5); }
    100% { opacity: 1; transform: scale(1.02); filter: brightness(1); }
  }

  @keyframes text-fade {
    0% { opacity: 0; filter: blur(10px); }
    100% { opacity: 0.9; filter: blur(0); }
  }

  .animate-reveal-white {
    animation: reveal-white 1.2s cubic-bezier(0.77, 0, 0.175, 1) forwards;
  }

  .animate-image-entry {
    animation: image-entry 1.8s ease-out forwards;
  }

  .animate-text-fade {
    animation: text-fade 1.5s ease-out 0.8s forwards;
  }
</style>