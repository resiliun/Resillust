---
import Nav from "../layouts/nav.astro";
---
<Nav>
  <script defer src="https://cdn.jsdelivr.net/npm/@alpinejs/intersect@3.x.x/dist/cdn.min.js"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

  <main class="relative min-h-screen w-full bg-white flex flex-col p-6 md:p-24 font-arial overflow-x-hidden selection:bg-red-100">
    
    <header class="mb-20 md:mb-32 pt-12 md:pt-0">
      <div class="flex flex-col md:flex-row md:items-center gap-4 md:gap-6" 
           x-data="{ text: '', fullText: 'ABOUT', init() { setTimeout(() => { let i = 0; let interval = setInterval(() => { this.text += this.fullText[i]; i++; if (i >= this.fullText.length) clearInterval(interval); }, 150) }, 500) }}">
        
        <div class="flex items-center gap-4 w-full md:w-auto">
          <h1 class="text-6xl md:text-8xl font-italiana tracking-tighter leading-none text-gray-900 min-h-[1em] whitespace-nowrap" 
              x-text="text"></h1>
          <div class="h-[1px] flex-1 md:w-64 bg-gray-200 animate-line-grow"></div>
        </div>

        <span class="text-[9px] tracking-[0.5em] text-gray-400 uppercase opacity-60 md:opacity-100">
          Resillust Profile
        </span>
      </div>
    </header>

    <div class="relative z-10 max-w-5xl mx-auto w-full space-y-32 md:space-y-48">
      
      <section 
        x-data="{ text: '', fullText: 'WHO..' }"
        x-intersect.once="let i = 0; let interval = setInterval(() => { text += fullText[i]; i++; if (i >= fullText.length) clearInterval(interval); }, 150)"
        class="flex flex-col md:flex-row justify-end items-start gap-8 md:gap-16"
      >
        <div class="w-full md:w-1/3">
           <h2 class="text-5xl md:text-7xl leading-none font-italiana text-gray-900 md:text-right md:typewriter-cursor" x-text="text"></h2>
        </div>
        <div class="w-full md:w-2/3 max-w-xl" x-show="text.length > 0" x-transition:enter="transition ease-out duration-1000" x-transition:enter-start="opacity-0 translate-y-4" x-transition:enter-end="opacity-100 translate-y-0">
          <p class="text-lg md:text-2xl leading-relaxed font-piazzolla text-gray-700 italic">
            I am <span class="text-black font-bold not-italic underline decoration-red-500/30 decoration-4 underline-offset-4">Resillust</span>, a freelance illustrator from Indonesia. My creative journey has led me to specialize in 2D and 3D illustration, a field where I feel most at home.
          </p>
        </div>
      </section>

      <section 
        x-data="{ text: '', fullText: 'BACKGROUND' }"
        x-intersect.once="let i = 0; let interval = setInterval(() => { text += fullText[i]; i++; if (i >= fullText.length) clearInterval(interval); }, 100)"
        class="flex flex-col md:flex-row-reverse justify-end items-start gap-8 md:gap-16"
      >
        <div class="w-full md:w-1/3">
           <h2 class="text-5xl md:text-7xl leading-none font-italiana text-gray-900 md:typewriter-cursor" x-text="text"></h2>
        </div>
        <div class="w-full md:w-2/3 max-w-xl" x-show="text.length > 0" x-transition:enter="transition ease-out duration-1000" x-transition:enter-start="opacity-0 translate-y-4" x-transition:enter-end="opacity-100 translate-y-0">
          <div class="space-y-8">
            <h3 class="text-xl md:text-2xl font-bold italic underline decoration-1 underline-offset-8 font-piazzolla text-gray-900">
              student | Institut Seni Indonesia
            </h3>
            <ul class="space-y-8 text-sm md:text-lg italic font-piazzolla text-gray-600">
              <li class="relative pl-8 group">
                <span class="absolute left-0 top-3 w-4 h-[1px] bg-red-600 transition-all group-hover:w-8"></span>
                <strong class="text-black not-italic block mb-1">Printmaking</strong>
                Manual printing techniques and material-based visual design.
              </li>
              <li class="relative pl-8 group">
                <span class="absolute left-0 top-3 w-4 h-[1px] bg-red-600 transition-all group-hover:w-8"></span>
                <strong class="text-black not-italic block mb-1">Media Technology</strong>
                Exploration of creative software and digital platforms.
              </li>
              <li class="relative pl-8 group">
                <span class="absolute left-0 top-3 w-4 h-[1px] bg-red-600 transition-all group-hover:w-8"></span>
                <strong class="text-black not-italic block mb-1">Entrepreneurship</strong>
                Business models and marketing for the creative industry.
              </li>
            </ul>
          </div>
        </div>
      </section>

      <section 
        x-data="{ text: '', fullText: 'SKILLS' }"
        x-intersect.once="let i = 0; let interval = setInterval(() => { text += fullText[i]; i++; if (i >= fullText.length) clearInterval(interval); }, 150)"
        class="flex flex-col md:flex-row justify-end items-start gap-8 md:gap-16 pb-32"
      >
        <div class="w-full md:w-1/3 text-left md:text-right">
           <h2 class="text-5xl md:text-7xl leading-none font-italiana text-gray-900 uppercase md:typewriter-cursor" x-text="text"></h2>
        </div>
        <div class="w-full md:w-2/3" x-show="text.length > 0" x-transition:enter="transition ease-out duration-1000" x-transition:enter-start="opacity-0 translate-y-4" x-transition:enter-end="opacity-100 translate-y-0">
           <p class="text-[10px] tracking-[0.4em] mb-12 opacity-60 uppercase font-piazzolla text-gray-500 italic">Essential Tools I Master</p>
           
           <div class="grid grid-cols-2 lg:grid-cols-3 gap-8 md:gap-12">
             <div class="group flex flex-col gap-4">
               <div class="w-20 h-20 bg-zinc-50 border border-zinc-100 flex items-center justify-center grayscale group-hover:grayscale-0 transition-all duration-700 group-hover:shadow-xl group-hover:-translate-y-1">
                 <img src="/icons/cubism.png" alt="Cubism" class="w-10 h-10 object-contain opacity-40 group-hover:opacity-100 transition-opacity" />
               </div>
               <span class="text-[10px] tracking-widest font-bold uppercase text-gray-400 group-hover:text-black transition-colors">Live2D Cubism</span>
             </div>

             <div class="group flex flex-col gap-4">
               <div class="w-20 h-20 bg-zinc-50 border border-zinc-100 flex items-center justify-center grayscale group-hover:grayscale-0 transition-all duration-700 rounded-full group-hover:shadow-xl group-hover:-translate-y-1">
                 <img src="/icons/csp.png" alt="CSP" class="w-10 h-10 object-contain opacity-40 group-hover:opacity-100 transition-opacity" />
               </div>
               <span class="text-[10px] tracking-widest font-bold uppercase text-gray-400 group-hover:text-black transition-colors">Clip Studio Paint</span>
             </div>

             <div class="group flex flex-col gap-4">
               <div class="w-20 h-20 bg-zinc-50 border border-zinc-100 flex items-center justify-center grayscale group-hover:grayscale-0 transition-all duration-700 group-hover:shadow-xl group-hover:-translate-y-1">
                 <img src="/icons/blender.png" alt="Blender" class="w-10 h-10 object-contain opacity-40 group-hover:opacity-100 transition-opacity" />
               </div>
               <span class="text-[10px] tracking-widest font-bold uppercase text-gray-400 group-hover:text-black transition-colors">Blender 3D</span>
             </div>
           </div>
        </div>
      </section>

    </div>
  </main>
</Nav>

<style>
  [x-cloak] { display: none !important; }

  /* Kursor mesin tik */
  .typewriter-cursor::after {
    content: "|";
    animation: blink 0.8s infinite;
    font-weight: 100;
    color: #ef4444;
    margin-left: 4px;
  }

  @keyframes blink { 0%, 100% { opacity: 1; } 50% { opacity: 0; } }

  /* Smooth Line Animation */
  .animate-line-grow {
    animation: lineGrow 1.5s ease-in-out forwards;
    transform-origin: left;
  }

  @keyframes lineGrow {
    from { transform: scaleX(0); opacity: 0; }
    to { transform: scaleX(1); opacity: 1; }
  }
</style>